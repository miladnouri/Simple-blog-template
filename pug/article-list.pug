extends layout/_layout

block variables
    - var pageTitle = "نوشته‌های دسته‌بندی تکنولوژی"

block content

    // Breadcrumb navigation
    div.breadcrumb
        a(href="index.html") خانه
        |  &gt; 
        a(href="article-list.html") مقاله‌ها
        |  &gt; 
        | لیست نوشته‌های دسته‌بندی تکنولوژی


    article.card
        // Article 1
        div.gray-badge نمونه بج طوسی
        h2: a(href='article-single.html') چگونگی بهینه‌سازی وب‌سایت
        img(src='https://fakeimg.pl/800x300/5469a1/ffffff?text=Sample+image&font=lobster', alt='تصویر مقاله')
